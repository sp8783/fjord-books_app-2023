<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= t('layout.common.sign_in_as', email: current_user.email) %> 
        <%= link_to t('layout.common.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('layout.common.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
        <div class="title">メニュー</div>
        <ul>
          <li>
            <%= link_to '本', books_path %>
          </li>
          <li>
            <%= link_to 'ユーザー', users_path %>
          </li>
        </ul>
      <% end %>
    </p>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
